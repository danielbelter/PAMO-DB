<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/recomendation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/weightTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weightText" />

        <EditText
            android:id="@+id/weightText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/heightTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/heightTextView" />

        <EditText
            android:id="@+id/heightText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/recom_age"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/recom_age" />

        <EditText
            android:id="@+id/heightText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/recom_plecView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/recom_plecView" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButton_women"
                android:layout_width="99dp"
                android:layout_height="20dp"
                android:text="@string/RadioButton_women" />

            <RadioButton
                android:id="@+id/radioButton_men"
                android:layout_width="155dp"
                android:layout_height="20dp"
                android:text="@string/RadioButton_men" />

            <Button
                android:id="@+id/recom_calc_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/calculateButtonText" />

            <TextView
                android:id="@+id/recom_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1" />

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/recpie1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/spageti" />

                    <TextView
                        android:id="@+id/recipe1"
                        android:layout_width="match_parent"
                        android:layout_height="388dp"
                        android:text="@string/recipe1" />


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/jajecznica" />

                    <TextView
                        android:id="@+id/recipe2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:text="@string/recipe2" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/nalesniki" />

                    <TextView
                        android:id="@+id/recipe3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:text="@string/recipe3" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/salatka" />

                    <TextView
                        android:id="@+id/recipe4"
                        android:layout_width="match_parent"
                        android:layout_height="388dp"
                        android:text="@string/recipe4" />
                </LinearLayout>
            </ScrollView>

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bmi_calculaltor_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="invisible">

        <android.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weightText" />

            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/heightTextView" />

            <EditText
                android:id="@+id/weightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/heightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/caluculateButton"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/calculateButtonText" />

            <TextView
                android:id="@+id/bmiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/bmiTextView" />

            <TextView
                android:id="@+id/bmiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:id="@+id/scaleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1" />


        </android.widget.GridLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <TextView
            android:id="@+id/welcome_message_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message" />

        <TextView
            android:id="@+id/month_textView"
            android:layout_width="309dp"
            android:layout_height="30dp"
            android:text="Styczen/ Luty/ Marzec(srednia waga w kg)" />

        <EditText
            android:id="@+id/styczen_text_id"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/month_textView3"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Kwiecień/Maj/Czerwiec ( Srednia waga w kg)" />

        <EditText
            android:id="@+id/luty_text_id"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/month_textView7"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Lipiec/ Sierpien/ Wrzesien(Srednia waga w kg)" />

        <EditText
            android:id="@+id/marzec_text_id"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/month_textView8"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Październik/ Listopad / Grudzien (Srednia waga w kg)" />

        <EditText
            android:id="@+id/kwiecien_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/bt_activity_changer"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_activity_text"
            android:visibility="visible" />

        <Button
            android:id="@+id/bt_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz o zdrowiu" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</android.support.constraint.ConstraintLayout>